<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_activity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDocumentNum"
            style="@style/ItemTextViewStyle"
            android:text="@string/documentNum" />

        <Button
            android:id="@+id/btn_activity_document_detail_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/selector_btn"
            android:text="支付" />

        <TextView
            android:id="@+id/tv_picture"
            style="@style/ItemTextViewStyle"
            android:onClick="lookPic"
            android:text="@string/lookPic"
            android:textColor="#00f" />

        <ListView
            android:id="@+id/lv_SpMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pic"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

    </android.support.v4.view.ViewPager>
</LinearLayout>
