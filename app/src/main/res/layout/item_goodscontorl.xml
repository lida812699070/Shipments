<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="2017-01-19 18点"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/otherDocument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvDate"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/tvDate"
        android:text="XSJ3329634"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/toCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvDate"
        android:layout_alignStart="@+id/tvDate"
        android:layout_below="@+id/tvDate"
        android:layout_marginTop="5dp"
        android:text="深圳"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/tvConsiginee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/otherDocument"
        android:layout_alignStart="@+id/otherDocument"
        android:layout_alignTop="@+id/toCity"
        android:text="收货人(x)"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/tvSendGoodsContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/toCity"
        android:layout_alignStart="@+id/toCity"
        android:layout_below="@+id/toCity"
        android:layout_marginTop="5dp"
        android:text="货物 xxxxxxxxxxxxxx"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tvStatusDocument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvSendGoodsContent"
        android:layout_alignStart="@+id/tvSendGoodsContent"
        android:layout_below="@+id/tvSendGoodsContent"
        android:layout_marginTop="5dp"
        android:text="订单状态：xx"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tvStatusContorl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvStatusDocument"
        android:layout_alignStart="@+id/tvStatusDocument"
        android:layout_below="@+id/tvStatusDocument"
        android:layout_marginTop="5dp"
        android:text="物控状态：xx"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/isContorl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvStatusContorl"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tvStatusContorl"
        android:layout_below="@+id/tvStatusContorl"
        android:layout_marginTop="5dp"
        android:text="直发/物控"
        android:textAppearance="?android:attr/textAppearanceLarge"/>


</RelativeLayout>